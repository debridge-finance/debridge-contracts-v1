{
  "name": "debridge-contracts",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "prettier": "prettier -c --write test/*.js && prettier --write contracts/*/*.sol",
    "lint": "prettier",
    "precompile": "mkdir -p build/contracts/ && cp precompiled/* build/contracts/",
    "compile": "hardhat compile",
    "build": "truffle build",
    "migrate": "truffle migrate",
    "verify": "truffle run verify Aggregator Debridge",
    "start-ganache": "ganache-cli --chainId 1 --seed alice",
    "pretest": "$npm_execpath compile",
    "test": "hardhat test",
    "contract-size": "truffle run contract-size",
    "coverage": "hardhat coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KStasi/debridge-contracts.git"
  },
