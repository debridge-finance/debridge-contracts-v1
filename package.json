    "@openzeppelin/cli": "^2.8.2",
    "@openzeppelin/hardhat-upgrades": "^1.9.0",
    "@openzeppelin/truffle-upgrades": "^1.5.1",
    "dotenv": "^10.0.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.4.2",
    "hardhat": "^2.5.0",
    "hardhat-deploy": "^0.8.11",
    "hardhat-gas-reporter": "^1.0.4",
